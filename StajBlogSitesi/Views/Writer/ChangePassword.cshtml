@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Şifre Değiştirme";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            @using (Html.BeginForm("ChangePassword", "Writer", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.Label("CurrentPassword", "Mevcut Şifre", new { @class = "form-control-label" })
                    @Html.TextBox("CurrentPassword", null, new { @class = "form-control", type = "password", placeholder = "Mevcut şifre" })
                </div>

                <div class="form-group">
                    @Html.Label("NewPassword", "Yeni Şifre", new { @class = "form-control-label" })
                    @Html.TextBox("NewPassword", null, new { @class = "form-control", type = "password", placeholder = "Yeni şifre" })
                </div>

                <div class="form-group">
                    @Html.Label("ConfirmNewPassword", "Yeni Şifre Tekrar", new { @class = "form-control-label" })
                    @Html.TextBox("ConfirmNewPassword", null, new { @class = "form-control", type = "password", placeholder = "Yeni şifre tekrar" })
                </div>

                <button type="submit" class="btn btn-gradient-primary">Şifreyi Değiştir</button>
            }
        </div>
    </div>
</div>
