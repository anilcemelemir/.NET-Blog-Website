@using System.Security.Claims

<div class="col-md-4 top-forms text-center mt-lg-3 mt-md-1 mt-0 d-flex align-items-center justify-content-start">
    @if (User.Identity.IsAuthenticated)
    {
        <span>Tekrar Hoşgeldiniz, @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.GivenName)?.Value!</span>
        @using (Html.BeginForm("Logout", "Login", FormMethod.Post, new { @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link nav-link ml-5">
                <i class="fas fa-sign-out-alt"></i> Çıkış Yap
            </button>
        }
    }
    else
    {
        <span>Tekrar Hoşgeldiniz!</span>
        <a href="/Login/Index/" class="mx-lg-2 mx-md-1 mx-1 ml-2">
            <i class="fas fa-lock"></i> Giriş Yap
        </a>
        <a href="@Url.Action("Index", "Register")" class="ml-2">
            <i class="far fa-user"></i> Kayıt Ol
        </a>
    }
</div>
