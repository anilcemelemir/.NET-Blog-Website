@using EntityLayer.Concrete
@model List<Message2>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>

    @if (Model == null || !Model.Any())
    {
        <p class="p-3 mb-0 text-center">Mesajınız bulunmamaktadır.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item" href="@Url.Action("MessageDetails", "Message", new { id = item.MessageID })">
                <div class="preview-thumbnail">
                    <img src="@item.SenderUser.WriterImage" alt="image" class="profile-pic">
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.WriterName size mesaj gönderdi.</h6>
                    <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString() </p>
                </div>
            </a>
            <div class="dropdown-divider"></div>
        }
        <h6 class="p-3 mb-0 text-center">
            @(Model.Count() == 1 ? "1 yeni mesaj" : $"{Model.Count()} yeni mesaj")
        </h6>
    }
</div>
