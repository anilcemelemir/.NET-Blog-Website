@model EntityLayer.Concrete.Blog
@using EntityLayer.Concrete


@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">

<body>
    <!--//banner-->
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="@Model.BlogImage" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)Model.BlogCreateDate).ToString("d"))
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> @Model.CommentCount Comments
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            <a href="single.html">@Model.BlogTitle </a>
                        </h3>
                        <p>
                            @Model.BlogContent
                        </p>
                        <a href="/Blog/Index" class="btn btn-primary read-m">Blog Listesi</a>
                    </div>
                    @await Component.InvokeAsync("CommentListByBlog", new { id = @ViewBag.ID })
                    @await Html.PartialAsync("/Views/Comment/PartialAddComment.cshtml", new Comment { BlogID = @ViewBag.ID })

                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/CoreBlogTema/web/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h4>Mail Bültenine Abone Ol</h4>
                        @await Html.PartialAsync("/Views/NewsLetter/SubscribeMail.cshtml")
                        @await Component.InvokeAsync("CategoryList")
                        @await Component.InvokeAsync("WriterLastBlog", new { writerId = @ViewBag.WriterID })
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>

</body>

</html>



