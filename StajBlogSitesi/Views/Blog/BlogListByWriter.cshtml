@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Blog Başlığı</th>
                    <th>Oluşturma Tarihi</th>
                    <th>Kategori</th>
                    <th>Blog Durumu</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BlogID</td>
                        <td>@item.BlogTitle</td>
                        <td>@(((DateTime)item.BlogCreateDate).ToString("d"))</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.BlogStatus</td>
                        <td><a href="/Blog/BlogDelete?id=@item.BlogID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Blog/EditBlog?id=@item.BlogID" class="btn btn-warning">Düzenle</a></td>
                    </tr>

                }
            </tbody>
        </table>
        <br />
        <br />
        <a href="/Blog/BlogAdd" class="btn btn-gradient-primary">Yeni Blog Oluştur</a>
    </div>
</div>





