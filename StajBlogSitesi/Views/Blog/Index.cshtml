@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Postları</h3>
        <div class="inner-sec">
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogDetails/@item.BlogID">
                                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("d"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> @item.CommentCount
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="single.html">@item.BlogTitle</a>
                                </h5>
                                @if (item.BlogContent.Length > 120)
                                {
                                    var endIndex = item.BlogContent.Substring(0, 120).LastIndexOf(" ");
                                    endIndex = endIndex > 0 ? endIndex : 120; // Eğer boşluk bulunmazsa 120'yi kullan
                                                                              <p class="card-text mb-3">@item.BlogContent.Substring(0, endIndex)...</p>
                                }
                                else
                                {
                                    <p class="card-text mb-3">@item.BlogContent</p>
                                }
                                <a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-primary read-m">Daha fazla oku...</a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</section>

