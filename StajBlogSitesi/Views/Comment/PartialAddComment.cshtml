@if (User.Identity.IsAuthenticated)
{
    <div class="comment-top">
        <h4>Bir Yorum Yapın</h4>
        <div class="comment-bottom">
            <form action="/Comment/PartialAddComment" method="post">
                <input type="hidden" name="id" value="@ViewBag.ID" />
                <input class="form-control" type="text" name="CommentTitle" placeholder="Konu" required="">

                <textarea class="form-control" name="CommmentContent" placeholder="Yorumunuz..." required=""></textarea>
                <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
            </form>
        </div>
    </div>
}
else
{
    <p>Yorum yapmak için <a href="/Account/Login">giriş yapmalısınız</a>.</p>
}
