@model List<EntityLayer.Concrete.Message2>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Konu</th>
                        <th>Gönderen</th>
                        <th>Tarih</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MessageID</td>
                            <td>@item.MessageDetails</td>
                            <td>@item.SenderUser.WriterName</td>
                            <td>@(((DateTime)item.MessageDate).ToString("d"))</td>
                            <td><a href="/Message/MessageDetails?id=@item.MessageID" class="btn btn-warning">Mesaja Git</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Mesaj bulunmamaktadır.</p>
        }

        <br />
        <br />
        <a href="/Message/SendMessage/" class="btn btn-gradient-primary">Yeni Mesaj Oluştur</a>
    </div>
</div>
